
{% extends '@!PrestaShop/Admin/layout.html.twig' %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col">
            {{ form_start(debugConfigurationForm) }}
            <div class="card">
                <h3 class="card-header">
                    <i class="material-icons">settings</i> {{ 'Debug'|trans({}, 'Modules.Scalexpertplugin.Admin') }}
                </h3>
                <div class="card-body">
                    <div class="form-wrapper">
                        {{ form_widget(debugConfigurationForm) }}
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary float-right" id="save-button">
                            {{ 'Save'|trans({}, 'Admin.Actions') }}
                        </button>
                    </div>
                </div>
            </div>
            {{ form_end(debugConfigurationForm) }}
        </div>
    </div>
{% endblock %}