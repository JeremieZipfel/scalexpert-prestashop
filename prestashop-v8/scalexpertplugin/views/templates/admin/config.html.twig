{% extends '@!PrestaShop/Admin/layout.html.twig' %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col">
            {{ form_start(regroupPaymentsForm) }}
            <div class="card">
                <h3 class="card-header">
                    <i class="material-icons">settings</i> {{ 'General'|trans({}, 'Modules.Scalexpertplugin.Admin') }}
                </h3>
                <div class="card-body">
                    <div class="form-wrapper">
                        {{ form_widget(regroupPaymentsForm) }}
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary float-right" id="save-button">
                            {{ 'Save'|trans({}, 'Admin.Actions') }}
                        </button>
                    </div>
                </div>
            </div>
            {{ form_end(regroupPaymentsForm) }}
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col">
            {{ form_start(financingConfigurationForm) }}
            <div class="card">
                <h3 class="card-header">
                    <i class="material-icons">credit_card</i> {{ 'e-Financing'|trans({}, 'Modules.Scalexpertplugin.Admin') }}
                </h3>
                <div class="card-body">
                    <div class="form-wrapper">
                        {{ form_widget(financingConfigurationForm) }}

                        {% if hasMissingFinancialSolutions %}
                            <div class="form-group row">
                                <div class="col-lg-4 offset-4">
                                    <a href="{{ subscribeToFinancingOptionsLink }}" class="btn btn-default" target="_blank">
                                        {{ 'Subscribe to another options'|trans({}, 'Modules.Scalexpertplugin.Admin') }}
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary float-right" id="save-button">
                            {{ 'Save'|trans({}, 'Admin.Actions') }}
                        </button>
                    </div>
                </div>
            </div>
            {{ form_end(financingConfigurationForm) }}
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col">
            {{ form_start(insuranceConfigurationForm) }}
            <div class="card">
                <h3 class="card-header">
                    <i class="material-icons">policy</i> {{ 'Extended insurance'|trans({}, 'Modules.Scalexpertplugin.Admin') }}
                </h3>
                <div class="card-body">
                    <div class="form-wrapper">
                        {{ form_widget(insuranceConfigurationForm) }}

                        {% if hasMissingInsuranceSolutions %}
                            <div class="form-group row">
                                <div class="col-lg-4 offset-4">
                                    <a href="{{ subscribeToInsuranceOptionsLink }}" class="btn btn-default" target="_blank">
                                        {{ 'Subscribe to another options'|trans({}, 'Modules.Scalexpertplugin.Admin') }}
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary float-right" id="save-button">
                            {{ 'Save'|trans({}, 'Admin.Actions') }}
                        </button>
                    </div>
                </div>
            </div>
            {{ form_end(insuranceConfigurationForm) }}
        </div>
    </div>
{% endblock %}